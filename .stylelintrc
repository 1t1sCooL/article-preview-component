{
    "extends": [
        "stylelint-config-standard"
    ],
    "plugins": [
        "stylelint-order"
    ],
    "rules": {
        "selector-class-pattern": [
            "^[a-z][a-zA-Z0-9]*$"
        ],
        "order/properties-order": [
            {
                "groupName": "Позиционирование",
                "emptyLineBefore": "never",
                "properties": [
                    "position",
                    "left",
                    "right",
                    "top",
                    "bottom",
                    "z-index"
                ]
            },
            {
                "groupName": "Блочная модель",
                "emptyLineBefore": "always",
                "properties": [
                    "margin",
                    "margin-top",
                    "margin-right",
                    "margin-bottom",
                    "margin-left",
                    "padding",
                    "padding-left",
                    "padding-right",
                    "padding-top",
                    "padding-bottom",
                    "display",
                    "flex-direction",
                    "align-items",
                    "border",
                    "width",
                    "height",
                    "box-sizing"
                ]
            },
            {
                "groupName": "Типографика",
                "emptyLineBefore": "always",
                "properties": [
                    "font-family",
                    "font-size",
                    "font-style",
                    "text-decoration",
                    "color"
                ]
            },
            {
                "groupName": "Оформление",
                "emptyLineBefore": "always",
                "properties": [
                    "background",
                    "opacity"
                ]
            },
            {
                "groupName": "Анимации",
                "emptyLineBefore": "always",
                "properties": [
                    "transform",
                    "animation"
                ]
            }
        ],
        "order/properties-alphabetical-order": null,
        "declaration-empty-line-before": [
            "always",
            {
                "except": [
                    "first-nested",
                    "after-comment"
                ],
                "ignore": [
                    "after-declaration"
                ]
            }
        ]
    }
}